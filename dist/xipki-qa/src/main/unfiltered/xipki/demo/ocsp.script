## POST
echo "QA: Good (POST, DB)"
xipki-qa:ocsp-status \
  --issuer output/RCA1.der \
  --cert output/SubCA1.der \
  --exp-status good \
  --exp-certhash required \
  --exp-sig-alg $SIGALGO \
  --nonce \
  --resp-issuer output/RCA1.der

