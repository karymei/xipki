## Suspend certificates
xipki-cli:revoke \
  --ca SubCA1 \
  --cert output/TLS2.der \
  --reason certificateHold

xipki-cli:unrevoke \
  --ca SubCA1 \
  --cert output/TLS2.der

## Revocate certificates
xipki-cli:revoke \
  --ca SubCA1 \
  --cert output/TLS2.der \
  --reason affiliationChanged

## Enroll certificates

