echo "#################################################################"
echo "#                              QA                               #"
echo "#################################################################"
feature:install -r xipki-caqa-shell

echo "Sleeping 1 second"
sleep 1

echo "#################################################################"
echo "#                       Check certificate                       #"
echo "#################################################################"

## RCA

xipki-qa:check-cert \
  --issuer RCA \
  --profile RCA \
  --csr output/RCA1.csr \
  --cert output/RCA1.der

xipki-qa:check-cert \
  --issuer RCA \
  --profile Cross \
  --csr output/Cross1.csr \
  --cert output/Cross1.der

xipki-qa:check-cert \
  --issuer RCA \
  --profile SubCA \
  --csr output/SubCA1.csr \
  --cert output/SubCA1.der

xipki-qa:check-cert \
  --issuer RCA \
  --profile SubCA.Complex \
  --csr output/SubCAwithCRL1.csr \
  --cert output/SubCAwithCRL1.der

## SubCAwithCRL

xipki-qa:check-cert \
  --issuer SubCAwithCRL \
  --profile OCSP \
  --csr output/OCSP1.csr \
  --cert output/OCSP1.der

xipki-qa:check-cert \
  --issuer SubCAwithCRL \
  --profile OCSP \
  --csr output/OCSP2.csr \
  --cert output/OCSP2.der

xipki-qa:check-cert \
  --issuer SubCAwithCRL \
  --profile multipleOUs \
  --csr output/multipleOUs1.csr \
  --cert output/multipleOUs1.der

xipki-qa:check-cert \
  --issuer SubCAwithCRL \
  --profile multipleOUs \
  --csr output/multipleOUs2.csr \
  --cert output/multipleOUs2.der

xipki-qa:check-cert \
  --issuer SubCAwithCRL \
  --profile multiValuedRDN \
  --csr output/multiValuedRDN1.csr \
  --cert output/multiValuedRDN1.der

xipki-qa:check-cert \
  --issuer SubCAwithCRL \
  --profile MaxTime \
  --csr output/MaxTime1.csr \
  --cert output/MaxTime1.der

## SubCA

xipki-qa:check-cert \
  --issuer SubCA \
  --profile TLS \
  --csr output/TLS1.csr \
  --cert output/TLS1.der

xipki-qa:check-cert \
  --issuer SubCA \
  --profile TLSwithIncSN \
  --csr output/TLSwithIncSN1.csr \
  --cert output/TLSwithIncSN1.der

xipki-qa:check-cert \
  --issuer SubCA \
